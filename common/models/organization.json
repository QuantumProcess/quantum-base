      "model": "user",
      "foreignKey": "organizationId",
      "through": "orgMember"
    },

    "areas": {
      "type": "hasMany",
      "model": "Area",
      "foreignKey": "organizationId"
    },
    "projects": {
      "type": "hasMany",
      "model": "Project"
    },
    "tasks": {
      "type": "hasMany",
      "model": "Task"
    },
    "events": {
      "type": "hasMany",
      "model": "Event",
