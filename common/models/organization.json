  },
  "properties": {
    "name": {
      "type": "string",
      "required": true
    },
    "lema": {
      "type": "string"
    },
    "logo": {
      "type": "string"
    },
    "info": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
